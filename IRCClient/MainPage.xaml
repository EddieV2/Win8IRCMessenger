    <Page.Resources>

        <Style x:Key="JoinAppBarButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="JoinAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Join Room"/>
            <Setter Property="Content" Value="&#xE109;"/>
        </Style>

        <Style x:Key="LeaveAppBarButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="LeaveAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Leave Room"/>
            <Setter Property="Content" Value="&#xE108;"/>
        </Style>
        
        <Style x:Key="DisconnectAppBarButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="DisconnectAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Disconnect"/>
            <Setter Property="Content" Value="&#xE106;"/>
        </Style>

        <Style x:Key="ConfigureAppBarButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="ConfigureAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Join Servers"/>
            <Setter Property="Content" Value="&#xE15E;"/>
        </Style>
        
    </Page.Resources>

