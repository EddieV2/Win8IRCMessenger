        </Grid>

        <Grid x:Name="WelcomeMessageSmall" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="20,8,0,0" TextWrapping="Wrap" Text="&#xE134;" FontSize="72" FontFamily="Segoe UI Symbol" HorizontalAlignment="Left" Width="98" Height="95" VerticalAlignment="Top"/>
            <HyperlinkButton x:Name="SelectAServerSmallButton" Margin="90,8,0,0"  Content="Select a Server" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" FontSize="20" Height="46" Click="SelectAServerButton_Click"/>
        </Grid>
        
